extends layout

block content
  h1 #{title}
  div.filter-container
    form(method='POST', action='/recipes/filter')
      select(name='type' placeholder="Select Type" id="typeFilter", class='type__filter')
        option(value='Pasta') Pasta
        option(value='Pizza') Pizza
        option(value='Breakfast') Breakfast
        option(value='Dinner') Dinner
        option(value='Dessert') Dessert
      select(name='difficulty' placeholder="Select Difficulty" id="difficultyFilter", class='type__filter')
        option(value=1) 1
        option(value=2) 2
        option(value=3) 3
        option(value=4) 4
        option(value=5) 5
      select(name='time' placeholder="Select Time" id="timeFilter", class='type__filter')
        option(value=20) 20
        option(value=40) 40
        option(value=60) 60
        option(value=90) 90
        option(value=120) 120
      input.btn.btn-primary(type='submit',value='Apply')
  ul.list-group
    each recipe, i in recipes
        li.list-group-item
          a(href="/recipes/"+recipe._id)= recipe.title


