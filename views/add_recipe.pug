extends layout

block content
  h1 #{title}
  form(method='POST', action='/recipes/add')
    #form-group
      label Title:
      input.form-control(name='title', type='text')
    #form-group
      label Type:
      input.form-control(name='type', type='text')
    #form-group
      label Difficulty:
      input.form-control(name='difficulty', type='number', min=1, max=5)
    #form-group
      label Time:
      input.form-control(name='time', type='number', min=1, max=1000)
    #form-group
      label Body:
      textarea.form-control(name='body')
    br
    input.btn.btn-primary(type='submit',value='Submit')
